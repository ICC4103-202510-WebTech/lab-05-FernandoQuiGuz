<div class="container mt-4">
  <h1 class="mb-4">Messages</h1>

  <% if can? :create, Message %>
    <%= link_to 'Add new message', new_message_path, class: 'btn btn-primary mb-3' %>
  <% end %>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Chat ID</th>
        <th>User ID</th>
        <th>Body</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>View</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.chat_id %></td>
          <td><%= message.user_id %></td>
          <td><%= message.body %></td>
          <td><%= message.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= message.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td>
            <%= link_to 'View', message_path(message), class: 'btn btn-sm btn-outline-primary' %>
          </td>
          <td>
            <% if can? :edit, message %>
              <%= link_to 'Edit', edit_message_path(message), class: 'btn btn-sm btn-outline-secondary' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
