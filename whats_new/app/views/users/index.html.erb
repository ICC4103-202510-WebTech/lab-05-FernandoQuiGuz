<div class="container mt-4">
  <h1 class="mb-4">Users</h1>

  <%= link_to 'Add new user', new_user_path, class: 'btn btn-primary mb-3' %>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>View</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= user.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= link_to 'View', user_path(user), class: 'btn btn-sm btn-outline-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
