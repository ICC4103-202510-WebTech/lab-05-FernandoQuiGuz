<h1 class="mb-4">Users</h1>

<%= link_to 'Add new user', new_user_path, class: 'btn btn-primary mb-3' %>

<div class="container">
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Messages Sent</th>
        <th>View</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.first_name %></td> 
          <td><%= user.last_name %></td>
          <td><%= user.messages.count %></td>
          <td><%= link_to 'View', user_path(user), class: 'btn btn-sm btn-outline-primary' %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-outline-secondary' %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
