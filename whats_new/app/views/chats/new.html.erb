<h1>New Chat</h1>

<%= form_with(model: @chat, local: true) do |f| %>
  <% if @chat.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @chat.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :sender_id %>
    <%= f.select :sender_id, User.all.map { |u| [u.first_name, u.id] } %>
  </div>

  <div>
    <%= f.label :receiver_id %>
    <%= f.select :receiver_id, User.all.map { |u| [u.first_name, u.id] } %>
  </div>

  <div>
    <%= f.submit "Create Chat" %>
  </div>
<% end %>
