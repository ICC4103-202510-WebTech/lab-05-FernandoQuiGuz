<div class="container mt-4">
  <h1 class="mb-4">Chats</h1>

  <%= link_to 'Add new chat', new_chat_path, class: 'btn btn-primary mb-3' %>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Sender ID</th>
        <th>Receiver ID</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>View</th>
      </tr>
    </thead>
    <tbody>
      <% @chats.each do |chat| %>
        <tr>
          <td><%= chat.sender_id %></td>
          <td><%= chat.receiver_id %></td>
          <td><%= chat.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= chat.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= link_to 'View', chat_path(chat), class: 'btn btn-sm btn-outline-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
